<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="left"
        android:orientation="horizontal"
        android:weightSum="120" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="100"
            android:gravity="bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="6dp"
                android:layout_weight="5"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvMenu1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/m1"
                    android:drawablePadding="0dp"
                    android:drawableTop="@drawable/t1"
                    android:gravity="left|bottom"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:text="菜单1"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvMenu2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/m2"
                    android:drawablePadding="0dp"
                    android:drawableTop="@drawable/t2"
                    android:gravity="left|bottom"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:text="菜单1"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:layout_weight="5"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvMenu3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/m3"
                    android:drawablePadding="0dp"
                    android:drawableTop="@drawable/t3"
                    android:gravity="left|bottom"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:text="菜单1"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvMenu4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/m4"
                    android:drawablePadding="0dp"
                    android:drawableTop="@drawable/t4"
                    android:gravity="left|bottom"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:text="菜单1"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvMenu5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_weight="6"
                android:background="@drawable/m5"
                android:drawableLeft="@drawable/t5"
                android:drawablePadding="80dp"
                android:gravity="center_vertical|right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="菜单1"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvMenu6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_weight="6"
                android:background="@drawable/m6"
                android:drawableLeft="@drawable/t6"
                android:drawablePadding="80dp"
                android:gravity="center_vertical|right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="菜单1"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/layAtom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="10dp"
            android:layout_weight="20"
            android:gravity="bottom|right"
            android:fillViewport="true" >

        </ScrollView>
    </LinearLayout>

</LinearLayout>